<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FlyManualFlight">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manual_flight_change_speed"
        android:layout_above="@id/sb_ChangeSpeed"
        android:textAlignment="center"
        android:textSize="21sp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"/>

    <SeekBar
        android:id="@+id/sb_ChangeSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:max="1024"
        android:progress="10" />

    <TextView
        android:id="@+id/txtView_Percentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0%"
        android:layout_below="@id/sb_ChangeSpeed"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"/>

</RelativeLayout>